    <update id="update_overdue" parameterType="borrowOrder">
		UPDATE tjd_borrow_order
		SET
		status = #{status}
		,yq_days = #{yqDays}
		,yqlx_amount = #{yqlxAmount}
		,total_amount = #{totalAmount}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
