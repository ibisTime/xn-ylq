<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.ylq.dao.IWayDAO">
	<resultMap id="way_DB_Result" type="way">
		<result column="code" property="code" />
		<result column="name" property="name" />
		<result column="url" property="url" />
		<result column="point_count" property="pointCount" />
		<result column="user_count" property="userCount" />
		<result column="status" property="status" />
		<result column="create_datetime" property="createDatetime" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="remark" property="remark" />
		<result column="company_code" property="companyCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="name != null and name != '' ">
				AND t.name like "%"#{name}"%"
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="companyCode != null and companyCode != '' ">
				AND t.company_code =#{companyCode}
			</if>
		</trim>
	</sql>
	<select id="select_way" parameterType="way" resultMap="way_DB_Result">
		SELECT
		t.code
		,t.name
		,t.url
		,t.point_count
		,t.user_count
		,t.status
		,t.create_datetime
		,t.updater
		,t.update_datetime
		,t.remark
		,t.company_code
		FROM
		tsys_way t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_way_count" parameterType="way"
		resultType="java.lang.Long">
		SELECT count(1) FROM tsys_way t
		<include refid="where_condition" />
	</select>

	<insert id="insert_way" parameterType="way">
		INSERT INTO
		tsys_way(
		code
		,name
		,url
		,point_count
		,user_count
		,status
		,create_datetime
		,updater
		,update_datetime
		,remark
		,company_code
		)
		VALUES(
		#{code}
		,#{name}
		,#{url}
		,#{pointCount}
		,#{userCount}
		,#{status}
		,#{createDatetime}
		,#{updater}
		,#{updateDatetime}
		,#{remark}
		,#{companyCode}
		)
	</insert>
	
	<delete id="delete_way" parameterType="way">
		DELETE FROM tsys_way
		WHERE code=#{code}
	</delete>

	<update id="update_way" parameterType="way">
		UPDATE tsys_way
		SET
		name = #{name}
		,url = #{url}
		,status=#{status}
		,create_datetime = #{createDatetime}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
	
	<update id="update_point_count" parameterType="way">
		UPDATE tsys_way
		SET
		point_count=#{pointCount}
		WHERE code = #{code}
	</update>
	
	<update id="update_user_count" parameterType="way">
		UPDATE tsys_way
		SET
		user_count=#{userCount}
		WHERE code = #{code}
	</update>
	
	
	


</mapper>